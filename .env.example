# Environment variables for the entire portfolio rebalancing system

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Main application data)
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_rebalancer
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=portfolio_rebalancer
DATABASE_USER=username
DATABASE_PASSWORD=password

# MongoDB Database (Time series financial data)
MONGODB_URL=mongodb://localhost:27017/financial_data
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=financial_data

# Redis (Caching and session management)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API
API_HOST=localhost
API_PORT=8000
API_BASE_URL=http://localhost:8000
API_VERSION=v1

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================

# ML Model Configuration
ML_MODELS_PATH=./ml_backend/models_saved
ML_DATA_PATH=./ml_backend/data_processed
ML_EXPERIMENTS_PATH=./ml_backend/experiments

# Training Configuration
DEFAULT_TRAINING_EPOCHS=1000
BATCH_SIZE=64
LEARNING_RATE=0.0003
GAMMA=0.99

# Model Serving
MODEL_SERVING_HOST=localhost
MODEL_SERVING_PORT=8001

# =============================================================================
# DATA PIPELINE CONFIGURATION
# =============================================================================

# Yahoo Finance API
YAHOO_FINANCE_RATE_LIMIT=0.1
YAHOO_FINANCE_MAX_WORKERS=5

# Alpha Vantage API (Optional)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Quandl API (Optional)
QUANDL_API_KEY=your-quandl-api-key

# Data Storage
RAW_DATA_PATH=./data_pipeline/raw_data
PROCESSED_DATA_PATH=./data_pipeline/processed_data

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# API Endpoints for mobile app
MOBILE_API_BASE_URL=http://localhost:8000/api
MOBILE_WS_URL=ws://localhost:8000/ws

# App Configuration
APP_NAME=Portfolio Rebalancer
APP_VERSION=1.0.0
MIN_SUPPORTED_VERSION=1.0.0

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# Development Tools
ENABLE_API_DOCS=true
ENABLE_PROFILING=false

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_portfolio_rebalancer

# =============================================================================
# PRODUCTION CONFIGURATION (Override in production)
# =============================================================================

# When deploying to production, override these values:
# ENVIRONMENT=production
# DEBUG=false
# Use secure, randomly generated secrets
# Use production database URLs
# Configure proper CORS origins
# Set up proper SSL certificates